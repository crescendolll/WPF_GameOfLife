        <Button x:Name="btn_Start" Content="Start" HorizontalAlignment="Left" Height="25" Margin="14,79,0,0" VerticalAlignment="Top" Width="125"/>
        <Button x:Name="btn_Stop" Content="Stop" HorizontalAlignment="Left" Height="25" Margin="14,128,0,0" VerticalAlignment="Top" Width="125"/>
        <Button x:Name="btn_Reset" Content="Reset" HorizontalAlignment="Left" Height="25" Margin="14,173,0,0" VerticalAlignment="Top" Width="125"/>
        <Button x:Name="btn_Create" Content="Create" HorizontalAlignment="Left" Height="25" Margin="14,215,0,0" VerticalAlignment="Top" Width="125" Click="btn_Create_Click"/>

    </Grid>
</Window>
